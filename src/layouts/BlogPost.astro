---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import PageLoader from '../components/PageLoader.astro';
import ScrollProgress from '../components/ScrollProgress.astro';
import BackToTop from '../components/BackToTop.astro';
import CursorGlow from '../components/CursorGlow.astro';
import ScrollReveal from '../components/ScrollReveal.astro';
import GradientText from '../components/GradientText.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="zh-CN">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				min-height: 100vh;
				background: #0a0a0a;
			}

			.hero-image {
				width: 100%;
				max-height: 60vh;
				overflow: hidden;
				position: relative;
				margin-bottom: 4em;
			}

			.hero-image::after {
				content: '';
				position: absolute;
				bottom: 0;
				left: 0;
				right: 0;
				height: 200px;
				background: linear-gradient(180deg, transparent 0%, #0a0a0a 100%);
			}

			.hero-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
			}

			.prose {
				max-width: 800px;
				margin: 0 auto;
				padding: 0 2em 4em;
				color: rgba(255, 255, 255, 0.8);
			}

			.title {
				margin-bottom: 3em;
				padding: 2em 0;
				text-align: center;
				line-height: 1;
				border-bottom: 2px solid rgba(99, 102, 241, 0.3);
			}

			.title h1 {
				margin: 0 0 1em 0;
				font-size: clamp(2em, 5vw, 3.5em);
				font-weight: 800;
				color: #ffffff;
				line-height: 1.2;
				letter-spacing: -0.02em;
			}

			.date {
				margin-bottom: 0.5em;
				font-weight: 600;
			}

			.date > * {
				background: rgba(99, 102, 241, 0.2);
				color: rgba(255, 255, 255, 0.9);
				padding: 0.4em 1em;
				display: inline-block;
				margin: 0.25em;
				font-size: 0.85em;
				font-weight: 600;
				border-radius: 6px;
				border: 1px solid rgba(99, 102, 241, 0.3);
			}

			.last-updated-on {
				font-style: italic;
				color: rgba(255, 255, 255, 0.5);
			}

			.prose :global(p) {
				margin-bottom: 1.5em;
				line-height: 1.8;
				font-size: 1.05em;
			}

			.prose :global(h2),
			.prose :global(h3),
			.prose :global(h4) {
				color: #ffffff;
				margin-top: 2em;
				margin-bottom: 1em;
			}

			.prose :global(h2) {
				font-size: 2em;
				font-weight: 700;
			}

			.prose :global(h3) {
				font-size: 1.5em;
				font-weight: 600;
			}

			.prose :global(a) {
				color: #a78bfa;
				text-decoration: none;
				border-bottom: 1px solid transparent;
				transition: all 0.3s ease;
			}

			.prose :global(a:hover) {
				color: #c4b5fd;
				border-bottom-color: #c4b5fd;
			}

			.prose :global(code) {
				background: rgba(99, 102, 241, 0.15);
				color: #e0e7ff;
				padding: 0.2em 0.4em;
				border-radius: 4px;
				font-size: 0.9em;
			}

			.prose :global(pre) {
				background: rgba(0, 0, 0, 0.3);
				border: 1px solid rgba(255, 255, 255, 0.1);
				border-radius: 8px;
				padding: 1.5em;
				overflow-x: auto;
			}

			.prose :global(blockquote) {
				border-left: 4px solid #6366f1;
				padding-left: 1.5em;
				margin: 2em 0;
				color: rgba(255, 255, 255, 0.7);
				font-style: italic;
			}

			.prose :global(img) {
				border-radius: 12px;
				box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
			}
		</style>
	</head>

	<body class="dark">
		<PageLoader />
		<ScrollProgress />
		<CursorGlow />
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<ScrollReveal>
						<div class="title">
							<div class="date">
								<FormattedDate date={pubDate} />
								{
									updatedDate && (
										<div class="last-updated-on">
											最后更新于 <FormattedDate date={updatedDate} />
										</div>
									)
								}
							</div>
							<h1><GradientText>{title}</GradientText></h1>
							<hr />
						</div>
					</ScrollReveal>
					<ScrollReveal delay={200}>
						<slot />
					</ScrollReveal>
				</div>
			</article>
		</main>
		<BackToTop />
		<Footer />
	</body>
</html>
