---
import HeaderArchitectural from "../components/HeaderArchitectural.astro";
import GlassCard from "../components/GlassCard.astro";
import BlogActivityHeatmap from "../components/BlogActivityHeatmap.astro";
import PinnedPosts from "../components/PinnedPosts.astro";
import BackToTop from "../components/BackToTop.astro";
import ScrollProgress from "../components/ScrollProgress.astro";
import Footer from "../components/Footer.astro";
import SkipLink from "../components/SkipLink.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";

// 性能优化：限制每页显示的文章数量
const POSTS_PER_PAGE = 20;

// 获取所有博客文章
const allPosts = await getCollection("blog");

// 分离置顶文章和普通文章
const pinnedPosts = allPosts.filter(post => post.data.pinned);
const regularPosts = allPosts.filter(post => !post.data.pinned);

// 性能优化：只显示最近的 N 篇文章（置顶文章不受影响）
const recentPosts = regularPosts.slice(0, POSTS_PER_PAGE);

// 按日期排序
const sortedPosts = recentPosts.sort(
  (a, b) =>
    Math.floor(new Date(b.data.pubDate).getTime() / 1000) -
    Math.floor(new Date(a.data.pubDate).getTime() / 1000)
);

// 置顶文章按 pinnedOrder 排序
const sortedPinnedPosts = pinnedPosts.sort(
  (a, b) => (a.data.pinnedOrder || 999) - (b.data.pinnedOrder || 999)
);

// 提取所有唯一标签
const allTags = new Set<string>();
allPosts.forEach((post) => {
  (post.data.tags || []).forEach((tag) => allTags.add(tag));
});

const sortedTags = Array.from(allTags).sort();
