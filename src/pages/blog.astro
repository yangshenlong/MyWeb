                  const count = allPosts.filter((p) => p.data.tags?.includes(tag)).length;
                  return (
                    <button class="tag-btn" data-filter={tag}>
                      <span class="tag-dot"></span>
                      <span class="tag-name">{tag}</span>
                      <span class="tag-count">{count}</span>
                    </button>
