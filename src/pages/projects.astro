---
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
---

const projects = [
	{
		title: '个人博客系统',
		description: '基于 Astro 构建的现代个人博客系统，采用深色电影感设计，包含博客、作品集、简历三大板块。',
		tags: ['Astro', 'TypeScript', 'CSS'],
		link: 'https://github.com/yangshenlong/MyWeb',
		github: 'https://github.com/yangshenlong/MyWeb',
		gradient: 'from-purple-500 to-indigo-500'
	},
	{
		title: '技术文章合集',
		description: '记录学习历程和技术探索的系列文章，涵盖前端开发、Web 技术和编程心得。',
		tags: ['技术写作', '前端', '教程'],
		link: '/blog',
		gradient: 'from-blue-500 to-cyan-500'
	},
	{
		title: '开源贡献',
		description: '积极参与开源项目，为社区贡献代码，学习最佳实践，提升技术水平。',
		tags: ['开源', 'GitHub', '协作'],
		github: 'https://github.com/yangshenlong',
		gradient: 'from-green-500 to-emerald-500'
	}
];
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={`作品集 | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body class="dark">
		<Header />

		<main class="projects-page">
			<div class="page-header">
				<div class="header-content">
					<div class="header-label">PORTFOLIO</div>
					<h1 class="header-title">作品集</h1>
					<p class="header-description">
						展示我的项目和技术实践，
						从概念到实现，记录每一个创作过程。
					</p>
				</div>
			</div>

			<div class="projects-grid">
				{projects.map((project) => (
					<ProjectCard {...project} />
				))}
			</div>

			<div class="cta-section">
				<div class="cta-content">
					<h2 class="cta-title">想了解更多？</h2>
					<p class="cta-description">
						查看我的 GitHub，探索更多项目和贡献
					</p>
					<a href="https://github.com/yangshenlong" class="cta-button" target="_blank">
						<svg viewBox="0 0 24 24" width="20" height="20" fill="currentColor">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
						</svg>
						访问 GitHub
					</a>
				</div>
			</div>
		</main>

		<Footer />

		<style>
			.projects-page {
				min-height: 100vh;
				background: #0a0a0a;
			}

			.page-header {
				padding: 6em 2em 4em;
				text-align: center;
				background: linear-gradient(180deg, rgba(99, 102, 241, 0.05) 0%, transparent 100%);
				border-bottom: 1px solid rgba(255, 255, 255, 0.05);
			}

			.header-content {
				max-width: 800px;
				margin: 0 auto;
			}

			.header-label {
				display: inline-block;
				padding: 0.5em 1.5em;
				background: rgba(99, 102, 241, 0.2);
				border: 1px solid rgba(99, 102, 241, 0.3);
				color: rgba(255, 255, 255, 0.9);
				font-size: 0.85em;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.2em;
				margin-bottom: 1.5em;
				border-radius: 50px;
			}

			.header-title {
				font-size: clamp(2.5em, 8vw, 5em);
				font-weight: 800;
				color: #ffffff;
				margin: 0 0 0.5em 0;
				line-height: 1.1;
				letter-spacing: -0.02em;
			}

			.header-description {
				font-size: 1.2em;
				color: rgba(255, 255, 255, 0.6);
				line-height: 1.7;
				max-width: 600px;
				margin: 0 auto;
			}

			.projects-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
				gap: 2.5em;
				max-width: 1400px;
				margin: 0 auto;
				padding: 4em 2em;
			}

			.cta-section {
				background: linear-gradient(180deg, transparent 0%, rgba(99, 102, 241, 0.1) 100%);
				padding: 6em 2em;
				text-align: center;
				border-top: 1px solid rgba(255, 255, 255, 0.05);
			}

			.cta-content {
				max-width: 600px;
				margin: 0 auto;
			}

			.cta-title {
				font-size: clamp(2em, 5vw, 3.5em);
				font-weight: 800;
				color: #ffffff;
				margin: 0 0 1em 0;
			}

			.cta-description {
				font-size: 1.1em;
				color: rgba(255, 255, 255, 0.6);
				margin: 0 0 2em 0;
				line-height: 1.7;
			}

			.cta-button {
				display: inline-flex;
				align-items: center;
				gap: 0.75em;
				padding: 1.25em 3em;
				background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
				color: #ffffff;
				font-size: 1.1em;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.1em;
				text-decoration: none;
				border-radius: 50px;
				box-shadow: 0 10px 40px rgba(99, 102, 241, 0.4);
				transition: all 0.3s ease;
			}

			.cta-button:hover {
				transform: translateY(-3px);
				box-shadow: 0 20px 60px rgba(99, 102, 241, 0.6);
			}

			@media (max-width: 768px) {
				.page-header {
					padding: 4em 1.5em 3em;
				}

				.projects-grid {
					grid-template-columns: 1fr;
					padding: 3em 1.5em;
				}

				.cta-section {
					padding: 4em 1.5em;
				}
			}
		</style>
	</body>
</html>
