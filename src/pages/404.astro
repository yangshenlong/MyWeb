---
import BaseHead from '../components/BaseHead.astro';
import HeaderArchitectural from '../components/HeaderArchitectural.astro';
import BackToTop from '../components/BackToTop.astro';
import ScrollProgress from '../components/ScrollProgress.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={`404 - ${SITE_TITLE}`} description="页面未找到" />
	</head>
	<body>
		<ScrollProgress />
		<HeaderArchitectural />

		<main class="not-found-page">
			<div class="content-wrapper">
				<div class="error-code">404</div>
				<h1 class="error-title">页面未找到</h1>
				<p class="error-description">抱歉，您访问的页面不存在或已被移动。</p>
				<a href="/" class="back-link">
					<span class="back-icon">←</span>
					<span class="back-text">返回首页</span>
				</a>
			</div>
		</main>

		<BackToTop />

		<style>
			.not-found-page {
				min-height: 100vh;
				display: flex;
				align-items: center;
				justify-content: center;
				background: var(--color-bg-primary);
				padding: 6em 2em 4em;
			}

			.content-wrapper {
				text-align: center;
				max-width: 600px;
			}

			.error-code {
				font-size: clamp(8em, 20vw, 15em);
				font-weight: 100;
				line-height: 1;
				color: rgba(255, 255, 255, var(--glass-opacity-bg-hover));
				font-family: 'Space Mono', monospace;
				margin-bottom: 0.2em;
			}

			.error-title {
				font-size: clamp(1.5em, 4vw, 3em);
				font-weight: 300;
				color: var(--color-text-primary);
				margin: 0 0 1em 0;
				letter-spacing: 0.1em;
			}

			.error-description {
				font-size: 1em;
				color: var(--color-text-tertiary);
				margin: 0 0 3em 0;
				line-height: 1.7;
			}

			.back-link {
				display: inline-flex;
				align-items: center;
				gap: 0.75em;
				padding: 1em 2em;
				background: rgba(255, 255, 255, var(--glass-opacity-bg-hover));
				border: 1px solid rgba(255, 255, 255, 0.15);
				color: rgba(255, 255, 255, 0.9);
				text-decoration: none;
				font-size: 0.9em;
				letter-spacing: 0.1em;
				text-transform: uppercase;
				transition: all 0.3s ease;
				border-radius: 4px;
			}

			.back-link:hover {
				background: var(--border-hover);
				border-color: rgba(255, 255, 255, 0.25);
				transform: translateY(-2px);
			}

			.back-icon {
				font-size: 1.2em;
				transition: transform 0.3s ease;
			}

			.back-link:hover .back-icon {
				transform: translateX(-4px);
			}

			@media (max-width: 768px) {
				.not-found-page {
					padding: 4em 1.5em 3em;
				}
			}
		</style>
	</body>
</html>
