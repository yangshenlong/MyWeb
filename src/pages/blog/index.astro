---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={`博客 | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			main {
				max-width: 1400px;
				margin: 0 auto;
				padding: 4em 2em;
				min-height: 100vh;
				background: #0a0a0a;
			}

			.page-header {
				text-align: center;
				margin-bottom: 4em;
			}

			.page-label {
				display: inline-block;
				padding: 0.5em 1.5em;
				background: rgba(99, 102, 241, 0.2);
				border: 1px solid rgba(99, 102, 241, 0.3);
				color: rgba(255, 255, 255, 0.9);
				font-size: 0.85em;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.2em;
				margin-bottom: 1.5em;
				border-radius: 50px;
			}

			h1 {
				font-size: clamp(2.5em, 6vw, 4em);
				font-weight: 800;
				color: #ffffff;
				margin: 0 0 0.5em 0;
				line-height: 1.1;
				letter-spacing: -0.02em;
			}

			.posts-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
				gap: 2.5em;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}

			.post-card {
				background: rgba(255, 255, 255, 0.03);
				border: 1px solid rgba(255, 255, 255, 0.08);
				border-radius: 16px;
				overflow: hidden;
				transition: all 0.4s ease;
				position: relative;
			}

			.post-card::before {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(168, 85, 247, 0.1) 100%);
				opacity: 0;
				transition: opacity 0.4s ease;
				border-radius: 16px;
			}

			.post-card:hover::before {
				opacity: 1;
			}

			.post-card:hover {
				transform: translateY(-8px);
				border-color: rgba(99, 102, 241, 0.3);
				box-shadow: 0 30px 60px rgba(0, 0, 0, 0.5), 0 0 40px rgba(99, 102, 241, 0.2);
			}

			.post-card a {
				display: block;
				text-decoration: none;
				position: relative;
				z-index: 1;
			}

			.post-image {
				width: 100%;
				height: 240px;
				overflow: hidden;
				position: relative;
			}

			.post-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: transform 0.4s ease;
			}

			.post-card:hover .post-image img {
				transform: scale(1.05);
			}

			.post-content {
				padding: 2em;
			}

			.post-title {
				font-size: 1.5em;
				font-weight: 700;
				color: #ffffff;
				margin: 0 0 1em 0;
				line-height: 1.3;
			}

			.post-date {
				display: inline-block;
				padding: 0.4em 0.8em;
				background: rgba(99, 102, 241, 0.2);
				color: rgba(255, 255, 255, 0.9);
				font-size: 0.85em;
				font-weight: 600;
				border-radius: 6px;
				border: 1px solid rgba(99, 102, 241, 0.3);
				margin-bottom: 0.75em;
			}

			.post-description {
				color: rgba(255, 255, 255, 0.6);
				line-height: 1.7;
			}

			@media (max-width: 768px) {
				main {
					padding: 3em 1.5em;
				}

				.posts-grid {
					grid-template-columns: 1fr;
					gap: 2em;
				}

				.post-image {
					height: 200px;
				}
			}
		</style>
	</head>
	<body class="dark">
		<Header />
		<main>
			<div class="page-header">
				<span class="page-label">BLOG</span>
				<h1>技术文章</h1>
				<p style="color: rgba(255, 255, 255, 0.6); font-size: 1.1em; max-width: 600px; margin: 0 auto;">
					分享技术心得，记录学习历程，探索编程世界
				</p>
			</div>

			<ul class="posts-grid">
				{posts.map((post) => (
					<li class="post-card">
						<a href={`/blog/${post.id}/`}>
							{post.data.heroImage && (
								<div class="post-image">
									<Image width={720} height={360} src={post.data.heroImage} alt="" />
								</div>
							)}
							<div class="post-content">
								<h2 class="post-title">{post.data.title}</h2>
								<div class="post-date">
									<FormattedDate date={post.data.pubDate} />
								</div>
								{post.data.description && (
									<p class="post-description">{post.data.description}</p>
								)}
							</div>
						</a>
					</li>
				))}
			</ul>
		</main>
		<Footer />
	</body>
</html>
