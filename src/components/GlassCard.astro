---
/**
 * 极简风格卡片组件
 * 纯色背景、微妙边框、流畅hover效果
 */

interface Props {
  class?: string;
  delay?: number;
  hover?: boolean;
}

const { class: className = "", delay = 0, hover = true } = Astro.props;
---

<div
  class:list={["glass-card", className, { "hover-enabled": hover }]}
  style={`--delay: ${delay}ms`}
>
  <div class="card-content">
    <slot />
  </div>
</div>

<style>
  .glass-card {
    position: relative;
    background: var(--bg-secondary, #0a0a0a);
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--border-subtle, rgba(255, 255, 255, 0.03));
    transition: border-color 0.2s ease, transform 0.15s ease;
  }

  .glass-card.hover-enabled:hover {
    border-color: var(--border-hover, rgba(255, 255, 255, 0.1));
    transform: translateY(-2px);
  }

  .card-content {
    position: relative;
    padding: 1.5rem;
  }
</style>
