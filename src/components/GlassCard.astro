---
/**
 * 建筑风格毛玻璃卡片组件
 * 高级感、精致动效、几何元素
 */

interface Props {
  class?: string;
  delay?: number;
  hover?: boolean;
}

const { class: className = "", delay = 0, hover = true } = Astro.props;
---

<div
  class:list={["glass-card", className, { "hover-enabled": hover }]}
  style={`--delay: ${delay}ms`}
>
  <div class="glass-background">
    <div class="glass-noise"></div>
    <div class="glass-gradient"></div>
  </div>
  <div class="glass-border"></div>
  <div class="card-content" data-content="true">
    <slot />
  </div>
  <div class="corner-markers">
    <span class="marker marker-tl"></span>
    <span class="marker marker-tr"></span>
    <span class="marker marker-bl"></span>
    <span class="marker marker-br"></span>
  </div>
</div>

<style>
  .glass-card {
    position: relative;
    background: rgba(255, 255, 255, var(--glass-opacity-bg));
    border-radius: 4px;
    overflow: hidden;
    backdrop-filter: blur(30px);
    -webkit-backdrop-filter: blur(30px);
    animation: cardFadeIn 0.6s ease-out backwards;
    animation-delay: var(--delay);
    border: 1px solid rgba(255, 255, 255, 0.06);
  }

  @keyframes cardFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .glass-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 0;
    pointer-events: none;
  }

  .glass-noise {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0.04;
    pointer-events: none;
    background-image: url("/noise.svg");
    background-size: 200px 200px;
  }

  .glass-gradient {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.06) 0%,
      rgba(255, 255, 255, var(--glass-opacity-bg)) 50%,
      rgba(255, 255, 255, 0.04) 100%
    );
  }

  .glass-border {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 1px solid var(--border-standard);
    border-radius: 4px;
    pointer-events: none;
    z-index: 1;
    transition: border-color 0.4s ease;
  }

  .card-content {
    position: relative;
    z-index: 2;
    padding: 2em;
  }

  .hover-enabled {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hover-enabled:hover {
    transform: translateY(-6px);
    background: rgba(255, 255, 255, 0.04);
    border-color: rgba(255, 255, 255, 0.12);
    box-shadow:
      0 25px 50px rgba(0, 0, 0, 0.5),
      0 0 100px rgba(255, 255, 255, 0.03),
      inset 0 0 30px rgba(255, 255, 255, var(--glass-opacity-bg));
  }

  .hover-enabled:hover .glass-border {
    border-color: rgba(255, 255, 255, 0.15);
  }

  /* Enhanced Corner Markers */
  .corner-markers {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 3;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .hover-enabled:hover .corner-markers {
    opacity: 1;
  }

  .marker {
    position: absolute;
    width: 10px;
    height: 10px;
    border-color: rgba(255, 255, 255, 0.4);
    border-style: solid;
    border-width: 0;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .marker-tl {
    top: 0.5em;
    left: 0.5em;
    border-top-width: 1.5px;
    border-left-width: 1.5px;
  }

  .marker-tr {
    top: 0.5em;
    right: 0.5em;
    border-top-width: 1.5px;
    border-right-width: 1.5px;
  }

  .marker-bl {
    bottom: 0.5em;
    left: 0.5em;
    border-bottom-width: 1.5px;
    border-left-width: 1.5px;
  }

  .marker-br {
    bottom: 0.5em;
    right: 0.5em;
    border-bottom-width: 1.5px;
    border-right-width: 1.5px;
  }

  .hover-enabled:hover .marker {
    width: 16px;
    height: 16px;
    border-color: rgba(255, 255, 255, 0.6);
  }

  /* Inner Glow on Top Edge */
  .glass-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.15) 20%,
      rgba(255, 255, 255, 0.2) 50%,
      rgba(255, 255, 255, 0.15) 80%,
      transparent 100%
    );
    z-index: 4;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .hover-enabled:hover::before {
    opacity: 1;
  }

  /* Subtle Light Reflection */
  .glass-card::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.03) 0%,
      transparent 50%,
      rgba(255, 255, 255, var(--glass-opacity-bg)) 100%
    );
    pointer-events: none;
    z-index: 1;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .hover-enabled:hover::after {
    opacity: 1;
  }
</style>
