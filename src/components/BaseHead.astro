---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "../styles/global.css";
import "../styles/theme.css";
import type { ImageMetadata } from "astro";
import FallbackImage from "../assets/blog-placeholder-1.jpg";
import { SITE_TITLE, AUTHOR } from "../consts";

interface Props {
  title: string;
  description: string;
  image?: ImageMetadata;
  type?: "website" | "article";
  breadcrumb?: Array<{ name: string; item?: string }>;
  datePublished?: string | Date;
  dateModified?: string | Date;
  tags?: string[];
  category?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const {
  title,
  description,
  image = FallbackImage,
  type = "website",
  breadcrumb,
  datePublished,
  dateModified,
  tags,
  category,
} = Astro.props;

const siteUrl = Astro.site?.href || "";
const imageUrl = new URL(image.src, siteUrl).href;

// 生成结构化数据
let jsonLd: any = {};

if (type === "article") {
  // 博客文章结构化数据
  jsonLd = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: title,
    description: description,
    image: imageUrl,
    datePublished: datePublished ? new Date(datePublished).toISOString() : new Date().toISOString(),
    dateModified: dateModified ? new Date(dateModified).toISOString() : new Date().toISOString(),
    url: canonicalURL.href,
    author: {
      "@type": "Person",
      name: AUTHOR.name,
      url: AUTHOR.github,
    },
    publisher: {
      "@type": "Organization",
      name: AUTHOR.name,
      logo: {
        "@type": "ImageObject",
        url: imageUrl,
      },
    },
    mainEntityOfPage: {
      "@type": "WebPage",
      "@id": canonicalURL.href,
    },
    inLanguage: "zh-CN",
  };

  // 添加标签
  if (tags && tags.length > 0) {
    jsonLd.keywords = tags.join(", ");
  }

  // 添加分类
  if (category) {
    jsonLd.articleSection = category;
  }
} else {
  // 普通网页结构化数据
  jsonLd = {
    "@context": "https://schema.org",
    "@type": "WebPage",
    name: title,
    description: description,
    url: canonicalURL.href,
    inLanguage: "zh-CN",
    isPartOf: {
      "@type": "WebSite",
      url: siteUrl,
      name: SITE_TITLE,
    },
  };
}

// 添加面包屑
if (breadcrumb && breadcrumb.length > 0) {
  const breadcrumbList = {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: breadcrumb.map((item, index) => ({
      "@type": "ListItem",
      position: index + 1,
      name: item.name,
      item: item.item ? new URL(item.item, siteUrl).href : undefined,
    })),
  };

  // 如果已有数据，包装为 Graph
  if (jsonLd["@type"]) {
    jsonLd = {
      "@context": "https://schema.org",
      "@graph": [jsonLd, breadcrumbList],
    };
  }
}
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://giscus.app; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://giscus.app; frame-src https://giscus.app;" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
  rel="alternate"
  type="application/rss+xml"
  title={SITE_TITLE}
  href={new URL("rss.xml", siteUrl)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Resource hints -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<!-- Font preloads with font-display: swap -->
<link
  rel="preload"
  href="/fonts/atkinson-regular.woff"
  as="font"
  type="font/woff"
  crossorigin
  onload="this.onload=null;this.rel='stylesheet'"
/>
<link
  rel="preload"
  href="/fonts/atkinson-bold.woff"
  as="font"
  type="font/woff"
  crossorigin
  onload="this.onload=null;this.rel='stylesheet'"
/>

<!-- Service Worker registration -->
<script>
  if ("serviceWorker" in navigator && location.protocol === "https:") {
     window.addEventListener("load", () => {
       navigator.serviceWorker
         .register("/sw.js")
         .then(() => {
           // Service Worker registered successfully
         })
         .catch(() => {
           // Service Worker registration failed
         });
     });
  }
</script>

<!-- Theme initialization (prevent FOUC) -->
<script is:inline>
  (function() {
    const storedTheme = localStorage.getItem('theme');
    const systemTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    const theme = storedTheme || 'auto';
    document.documentElement.setAttribute('data-theme', theme);
  })();
</script>

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="author" content={AUTHOR.name} />

{tags && tags.length > 0 && (
  <meta name="keywords" content={tags.join(", ")} />
)}

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type === "article" ? "article" : "website"} />
<meta property="og:url" content={canonicalURL.href} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageUrl} />
<meta property="og:site_name" content={SITE_TITLE} />
<meta property="og:locale" content="zh_CN" />

{type === "article" && datePublished && (
  <meta property="article:published_time" content={new Date(datePublished).toISOString()} />
)}
{type === "article" && dateModified && (
  <meta property="article:modified_time" content={new Date(dateModified).toISOString()} />
)}
{type === "article" && category && (
  <meta property="article:section" content={category} />
)}
{type === "article" && tags && tags.map((tag) => (
  <meta property="article:tag" content={tag} />
))}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL.href} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageUrl} />
<meta property="twitter:creator" content={AUTHOR.github} />

<!-- JSON-LD Structured Data -->
<script is:inline type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
