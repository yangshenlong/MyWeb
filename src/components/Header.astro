---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">首页</HeaderLink>
			<HeaderLink href="/blog">博客</HeaderLink>
			<HeaderLink href="/projects">作品集</HeaderLink>
			<HeaderLink href="/resume">简历</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://github.com/yangshenlong" target="_blank">
				<span class="sr-only">GitHub</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 1em 2em;
		background: rgba(0, 0, 0, 0.8);
		backdrop-filter: blur(20px);
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
		position: sticky;
		top: 0;
		z-index: 100;
	}

	h2 {
		margin: 0;
		font-size: 1.2em;
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}

	h2 a {
		background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
		color: #ffffff;
		padding: 0.6em 1.2em;
		border: none;
		box-shadow: 0 4px 15px rgba(99, 102, 241, 0.4);
		transition: all 0.3s ease;
		display: inline-block;
		font-weight: 700;
		border-radius: 8px;
		text-decoration: none;
	}

	h2 a:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(99, 102, 241, 0.6);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2em;
		flex-wrap: wrap;
	}

	.internal-links {
		display: flex;
		gap: 0.5em;
		position: relative;
		padding: 0.3em;
		background: rgba(255, 255, 255, 0.05);
		border-radius: 50px;
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	.internal-links a {
		background: transparent;
		color: rgba(255, 255, 255, 0.7);
		padding: 0.6em 1.5em;
		border: none;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		font-size: 0.85em;
		text-decoration: none;
		display: inline-block;
		border-radius: 50px;
		position: relative;
		z-index: 2;
	}

	.internal-links a:hover {
		color: #ffffff;
		transform: scale(1.05);
	}

	.internal-links a.active {
		background: #FF4F00;
		color: #ffffff;
		box-shadow: 0 4px 15px rgba(255, 79, 0, 0.4);
		transform: scale(1.05);
	}

	.internal-links a.active:hover {
		box-shadow: 0 6px 20px rgba(255, 79, 0, 0.6);
		transform: scale(1.08);
	}

	.social-links {
		display: flex;
		gap: 0.5em;
	}

	.social-links a {
		padding: 0.6em;
		background: rgba(255, 255, 255, 0.05);
		border: 1px solid rgba(255, 255, 255, 0.1);
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 8px;
		color: rgba(255, 255, 255, 0.7);
	}

	.social-links a:hover {
		background: rgba(255, 255, 255, 0.1);
		color: #ffffff;
		transform: translateY(-2px);
		border-color: rgba(255, 255, 255, 0.2);
	}

	@media (max-width: 720px) {
		header {
			padding: 0.75em 1em;
		}

		nav {
			flex-direction: column;
			align-items: stretch;
			gap: 1em;
		}

		h2 {
			text-align: center;
		}

		.internal-links {
			justify-content: center;
			flex-wrap: wrap;
		}

		.social-links {
			justify-content: center;
		}
	}
</style>
