---
/**
 * 项目卡片组件 - 深色电影感风格
 */

interface Props {
	title: string;
	description: string;
	tags?: string[];
	image?: string;
	link?: string;
	github?: string;
	gradient?: string;
}

const {
	title,
	description,
	tags = [],
	image,
	link,
	github,
	gradient = 'from-purple-500 to-indigo-500',
} = Astro.props;

const hasGradient = !image;
---

<div class="project-card">
	<div class="project-image" class:has-gradient={hasGradient}>
		{image ? (
			<img src={image} alt={title} />
		) : (
			<div class="gradient-bg" class:gradient-purple={gradient === 'from-purple-500 to-indigo-500'} class:gradient-blue={gradient === 'from-blue-500 to-cyan-500'} class:gradient-green={gradient === 'from-green-500 to-emerald-500'}>
				<span class="project-initial">{title.charAt(0)}</span>
			</div>
		)}
	</div>

	<div class="project-content">
		<h3 class="project-title">{title}</h3>
		<p class="project-description">{description}</p>

		{tags.length > 0 && (
			<div class="project-tags">
				{tags.map((tag) => (
					<span class="tag">{tag}</span>
				))}
			</div>
		)}

		<div class="project-links">
			{link && (
				<a href={link} class="project-link" target="_blank">
					<svg viewBox="0 0 24 24" width="18" height="18" fill="none" stroke="currentColor" stroke-width="2">
						<path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
						<polyline points="15 3 21 3 21 9"></polyline>
						<line x1="10" y1="14" x2="21" y2="3"></line>
					</svg>
					查看项目
				</a>
			)}
			{github && (
				<a href={github} class="project-link github" target="_blank">
					<svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor">
						<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
					</svg>
					源码
				</a>
			)}
		</div>
	</div>
</div>

<style>
	.project-card {
		background: rgba(255, 255, 255, 0.03);
		border: 1px solid var(--border-standard);
		border-radius: 20px;
		overflow: hidden;
		transition: all 0.4s ease;
		position: relative;
	}

	.project-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(99, 102, 241, 0.1) 0%, rgba(168, 85, 247, 0.1) 100%);
		opacity: 0;
		transition: opacity 0.4s ease;
		border-radius: 20px;
	}

	.project-card:hover::before {
		opacity: 1;
	}

	.project-card:hover {
		transform: translateY(-8px);
		border-color: rgba(99, 102, 241, 0.3);
		box-shadow: 0 30px 60px rgba(0, 0, 0, 0.5), 0 0 40px rgba(99, 102, 241, 0.2);
	}

	.project-image {
		width: 100%;
		height: 240px;
		position: relative;
		overflow: hidden;
	}

	.project-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.4s ease;
	}

	.project-card:hover .project-image img {
		transform: scale(1.05);
	}

	.gradient-bg {
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
	}

	.gradient-bg::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		opacity: 0.3;
	}

	.gradient-purple::before {
		background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
	}

	.gradient-blue::before {
		background: linear-gradient(135deg, #3b82f6 0%, #06b6d4 100%);
	}

	.gradient-green::before {
		background: linear-gradient(135deg, #10b981 0%, #059669 100%);
	}

	.gradient-bg::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: radial-gradient(circle at 30% 30%, var(--border-hover) 0%, transparent 50%);
	}

	.project-initial {
		position: relative;
		font-size: 6em;
		font-weight: 900;
		background: linear-gradient(135deg, #ffffff 0%, rgba(255, 255, 255, 0.6) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		z-index: 1;
	}

	.project-content {
		padding: 2em;
		position: relative;
		z-index: 1;
	}

	.project-title {
		font-size: 1.75em;
		font-weight: 700;
		color: #ffffff;
		margin: 0 0 1em 0;
		line-height: 1.3;
	}

	.project-description {
		color: var(--color-text-secondary);
		line-height: 1.7;
		margin: 0 0 1.5em 0;
	}

	.project-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5em;
		margin-bottom: 1.5em;
	}

	.tag {
		background: rgba(99, 102, 241, 0.2);
		color: rgba(255, 255, 255, 0.9);
		padding: 0.4em 0.8em;
		border-radius: 6px;
		font-size: 0.85em;
		font-weight: 500;
		border: 1px solid rgba(99, 102, 241, 0.3);
	}

	.project-links {
		display: flex;
		gap: 1em;
		flex-wrap: wrap;
	}

	.project-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5em;
		padding: 0.75em 1.25em;
		background: rgba(255, 255, 255, var(--glass-opacity-bg-hover));
		color: #ffffff;
		border: 1px solid var(--border-hover);
		border-radius: 8px;
		font-size: 0.9em;
		font-weight: 600;
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.project-link:hover {
		background: rgba(99, 102, 241, 0.3);
		border-color: rgba(99, 102, 241, 0.5);
		transform: translateY(-2px);
		box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
	}

	.project-link.github {
		background: rgba(255, 255, 255, var(--glass-opacity-bg-hover));
	}

	.project-link.github:hover {
		background: var(--border-hover);
		border-color: var(--color-text-muted);
	}

	@media (max-width: 768px) {
		.project-image {
			height: 200px;
		}

		.project-content {
			padding: 1.5em;
		}

		.project-title {
			font-size: 1.5em;
		}

		.project-links {
			flex-direction: column;
		}

		.project-link {
			justify-content: center;
		}
	}
</style>
