---
import { SITE_TITLE } from '../consts';

const navItems = [
	{ title: '作品', href: '/projects' },
	{ title: '博客', href: '/blog' },
	{ title: '关于', href: '/about' },
	{ title: '联系', href: '/contact' }
];
---

<header class="arch-header" id="archHeader">
	<div class="header-background">
		<div class="grid-overlay"></div>
		<div class="glass-effect"></div>
	</div>

	<nav class="arch-nav">
		<!-- Logo -->
		<a href="/" class="logo">
			<div class="logo-icon">
				<span class="line line-1"></span>
				<span class="line line-2"></span>
				<span class="line line-3"></span>
			</div>
			<span class="logo-text">{SITE_TITLE}</span>
		</a>

		<!-- Navigation -->
		<div class="nav-items" id="navItems">
			{navItems.map((item, index) => (
				<a
					href={item.href}
					class="nav-item"
					style={`--delay: ${index * 100}ms`}
				>
					<span class="nav-number">0{index + 1}</span>
					<span class="nav-text">{item.title}</span>
					<span class="nav-line"></span>
				</a>
			))}
		</div>

		<!-- Menu Toggle -->
		<button class="menu-toggle" id="menuToggle" aria-label="Menu">
			<span class="toggle-line"></span>
			<span class="toggle-line"></span>
		</button>
	</nav>

	<!-- Bottom Border -->
	<div class="header-border"></div>
</header>

<style>
	/* Header Base */
	.arch-header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		padding: 0;
		background: transparent;
		border: none;
	}

	.header-background {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: rgba(5, 5, 5, 0.85);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
	}

	.grid-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image:
			linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
			linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
		background-size: 50px 50px;
		pointer-events: none;
	}

	.glass-effect {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(
			180deg,
			rgba(20, 20, 20, 0.95) 0%,
			rgba(10, 10, 10, 0.9) 100%
		);
		border-bottom: 1px solid rgba(255, 255, 255, 0.08);
	}

	/* Navigation */
	.arch-nav {
		position: relative;
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1.5em 4em;
		max-width: 1600px;
		margin: 0 auto;
	}

	/* Logo */
	.logo {
		display: flex;
		align-items: center;
		gap: 1em;
		text-decoration: none;
		position: relative;
		z-index: 2;
	}

	.logo-icon {
		width: 40px;
		height: 40px;
		position: relative;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.line {
		position: absolute;
		background: rgba(255, 255, 255, 0.9);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.line-1 {
		width: 2px;
		height: 20px;
		top: 8px;
		left: 12px;
		transform-origin: top center;
	}

	.line-2 {
		width: 20px;
		height: 2px;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
	}

	.line-3 {
		width: 2px;
		height: 20px;
		bottom: 8px;
		right: 12px;
		transform-origin: bottom center;
	}

	.logo:hover .line-1 {
		transform: rotate(15deg);
	}

	.logo:hover .line-3 {
		transform: rotate(-15deg);
	}

	.logo-text {
		font-size: 0.85em;
		font-weight: 500;
		letter-spacing: 0.15em;
		color: rgba(255, 255, 255, 0.95);
		text-transform: uppercase;
	}

	/* Nav Items */
	.nav-items {
		display: flex;
		gap: 3em;
		align-items: center;
	}

	.nav-item {
		display: flex;
		align-items: center;
		gap: 0.75em;
		text-decoration: none;
		position: relative;
		padding: 0.5em 0;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		animation: slideDown 0.5s cubic-bezier(0.4, 0, 0.2, 1) backwards;
		animation-delay: var(--delay);
	}

	@keyframes slideDown {
		from {
			opacity: 0;
			transform: translateY(-10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.nav-number {
		font-size: 0.7em;
		font-weight: 400;
		letter-spacing: 0.1em;
		color: rgba(255, 255, 255, 0.35);
		font-family: 'Courier New', monospace;
		transition: all 0.3s ease;
	}

	.nav-text {
		font-size: 0.85em;
		font-weight: 400;
		letter-spacing: 0.1em;
		color: rgba(255, 255, 255, 0.8);
		text-transform: uppercase;
		position: relative;
		transition: all 0.3s ease;
	}

	.nav-line {
		position: absolute;
		bottom: 0;
		left: 0;
		width: 0;
		height: 1px;
		background: rgba(255, 255, 255, 0.9);
		transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.nav-item:hover .nav-number {
		color: rgba(255, 255, 255, 0.6);
	}

	.nav-item:hover .nav-text {
		color: rgba(255, 255, 255, 1);
		letter-spacing: 0.15em;
	}

	.nav-item:hover .nav-line {
		width: 100%;
	}

	/* Menu Toggle */
	.menu-toggle {
		display: none;
		flex-direction: column;
		gap: 6px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5em;
		position: relative;
		z-index: 1001;
	}

	.toggle-line {
		width: 24px;
		height: 2px;
		background: rgba(255, 255, 255, 0.9);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		transform-origin: center;
	}

	.menu-toggle:hover .toggle-line {
		background: rgba(255, 255, 255, 1);
	}

	.menu-toggle.active .toggle-line:nth-child(1) {
		transform: translateY(4px) rotate(45deg);
	}

	.menu-toggle.active .toggle-line:nth-child(2) {
		opacity: 0;
	}

	/* Header Border */
	.header-border {
		position: absolute;
		bottom: 0;
		left: 4em;
		right: 4em;
		height: 1px;
		background: linear-gradient(
			90deg,
			transparent 0%,
			rgba(255, 255, 255, 0.2) 50%,
			transparent 100%
		);
	}

	/* Responsive */
	@media (max-width: 1024px) {
		.arch-nav {
			padding: 1.5em 2em;
		}

		.nav-items {
			gap: 2em;
		}
	}

	@media (max-width: 768px) {
		.arch-nav {
			padding: 1em 1.5em;
		}

		.menu-toggle {
			display: flex;
		}

		.nav-items {
			position: fixed;
			top: 0;
			right: 0;
			width: 100%;
			height: 100vh;
			background: rgba(5, 5, 5, 0.98);
			backdrop-filter: blur(30px);
			flex-direction: column;
			justify-content: center;
			align-items: center;
			gap: 2em;
			transform: translateX(100%);
			transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
			z-index: 1000;
		}

		.nav-items.active {
			transform: translateX(0);
		}

		.nav-item {
			flex-direction: column;
			gap: 0.25em;
			font-size: 1.5em;
		}

		.nav-line {
			display: none;
		}

		.header-border {
			left: 1.5em;
			right: 1.5em;
		}

		.logo-text {
			display: none;
		}
	}
</style>

<script>
	const menuToggle = document.getElementById('menuToggle');
	const navItems = document.getElementById('navItems');

	if (menuToggle && navItems) {
		menuToggle.addEventListener('click', () => {
			menuToggle.classList.toggle('active');
			navItems.classList.toggle('active');
		});

		// Close menu on link click
		navItems.querySelectorAll('a').forEach(link => {
			link.addEventListener('click', () => {
				menuToggle.classList.remove('active');
				navItems.classList.remove('active');
			});
		});
	}
</script>
