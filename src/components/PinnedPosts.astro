---
/**
 * PinnedPosts ÁΩÆÈ°∂ÊñáÁ´†Âå∫ÂüüÁªÑ‰ª∂
 * ÊòæÁ§∫Âõ∫ÂÆöÂú®È°∂ÈÉ®ÁöÑÁΩÆÈ°∂ÊñáÁ´†ÂàóË°®
 */

import type { ComponentProps } from '../types/index.js';
import { formatDate } from '../utils/format';

interface Props extends ComponentProps {
  /** ÁΩÆÈ°∂ÊñáÁ´†Êï∞ÊçÆ */
  posts: Array<{
    slug: string;
    title: string;
    description: string;
    pubDate: Date;
    tags: string[];
    category?: string;
    pinnedOrder?: number;
  }>;
  /** ÊúÄÂ§ßÊòæÁ§∫Êï∞Èáè */
  maxDisplay?: number;
  /** ÊòØÂê¶ÂèØÊäòÂè† */
  collapsible?: boolean;
}

const {
  posts,
  maxDisplay = 5,
  collapsible = true,
  className = ''
} = Astro.props;

// Êåâ pinnedOrder ÊéíÂ∫è
const sortedPosts = posts
  .filter(post => post.pinnedOrder !== undefined)
  .sort((a, b) => (a.pinnedOrder || 0) - (b.pinnedOrder || 0));

// ÈôêÂà∂ÊòæÁ§∫Êï∞Èáè
const displayPosts = sortedPosts.slice(0, maxDisplay);
---

{displayPosts.length > 0 && (
  <section class:list={['pinned-posts-section', className]} aria-label="ÁΩÆÈ°∂ÊñáÁ´†">
    <div class="pinned-header">
      <div class="header-left">
        <span class="pin-icon">üìå</span>
        <h2 class="section-title">ÁΩÆÈ°∂ÊñáÁ´†</h2>
      </div>
      {collapsible && (
        <button class="collapse-toggle" aria-label="ÊäòÂè†/Â±ïÂºÄ" aria-expanded="true">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 15l-6-6-6 6" />
          </svg>
        </button>
      )}
    </div>
    <div class="pinned-posts-list">
      {displayPosts.map((post, index) => {
        const postUrl = `/blog/${post.slug}`;
        const formattedDate = formatDate(post.pubDate, 'zh-CN', 'long');

        return (
          <a
            href={postUrl}
            class="pinned-post-card"
            style={`--delay: ${index * 80}ms`}
          >
            <div class="card-badge">ÁΩÆÈ°∂ #{post.pinnedOrder}</div>
            <div class="card-content">
              <h3 class="post-title">{post.title}</h3>
              {post.description && (
                <p class="post-description">{post.description}</p>
              )}
              <div class="post-meta">
                <time class="post-date">{formattedDate}</time>
                {post.category && (
                  <span class="post-category">{post.category}</span>
                )}
              </div>
              {post.tags.length > 0 && (
                <div class="post-tags">
                  {post.tags.slice(0, 3).map(tag => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </a>
        );
      })}
    </div>
  </section>
)}

<style>
  .pinned-posts-section {
    background: linear-gradient(
      135deg,
      rgba(99, 102, 241, 0.08) 0%,
      rgba(168, 85, 247, 0.05) 100%
    );
    border: 1px solid rgba(99, 102, 241, 0.25);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 2rem;
    position: relative;
    overflow: hidden;
  }

  .pinned-posts-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(99, 102, 241, 0.5) 50%,
      transparent 100%
    );
  }

  .pinned-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.25rem;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .pin-icon {
    font-size: 1.25rem;
    animation: pinBounce 2s ease-in-out infinite;
  }

  @keyframes pinBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-3px); }
  }

  .section-title {
    font-size: 1rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.95);
    margin: 0;
  }

  .collapse-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    color: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .collapse-toggle:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.8);
  }

  .collapse-toggle.collapsed svg {
    transform: rotate(180deg);
  }

  .pinned-posts-list {
    display: grid;
    gap: 1rem;
  }

  .pinned-posts-list.collapsed {
    display: none;
  }

  .pinned-post-card {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 8px;
    transition: all 0.3s ease;
    animation: fadeInUp 0.5s ease-out backwards;
    animation-delay: var(--delay);
    text-decoration: none;
    color: inherit;
    position: relative;
  }

  .pinned-post-card:hover {
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(99, 102, 241, 0.3);
    transform: translateX(4px);
  }

  .pinned-post-card::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: linear-gradient(180deg, rgba(99, 102, 241, 0.5), rgba(168, 85, 247, 0.3));
    border-radius: 4px 0 0 4px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .pinned-post-card:hover::before {
    opacity: 1;
  }

  .card-badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.5rem;
    background: rgba(99, 102, 241, 0.15);
    border: 1px solid rgba(99, 102, 241, 0.3);
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 500;
    color: #a78bfa;
  }

  .card-content {
    flex: 1;
    margin-left: 0.5rem;
  }

  .post-title {
    font-size: 0.95rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.95);
    margin: 0 0 0.5rem 0;
    line-height: 1.4;
    padding-right: 3rem;
  }

  .post-description {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.6);
    margin: 0 0 0.75rem 0;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .post-date {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
    font-family: 'Space Mono', monospace;
  }

  .post-category {
    font-size: 0.75rem;
    padding: 0.15rem 0.5rem;
    background: rgba(99, 102, 241, 0.1);
    border: 1px solid rgba(99, 102, 241, 0.2);
    border-radius: 4px;
    color: #a78bfa;
  }

  .post-tags {
    display: flex;
    gap: 0.375rem;
  }

  .tag {
    font-size: 0.7rem;
    padding: 0.15rem 0.5rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 4px;
    color: rgba(255, 255, 255, 0.5);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ÂìçÂ∫îÂºè */
  @media (max-width: 768px) {
    .pinned-posts-section {
      padding: 1rem;
      margin-bottom: 1.5rem;
    }

    .pinned-post-card {
      flex-direction: column;
      gap: 0.75rem;
    }

    .card-badge {
      position: static;
      margin-bottom: 0.5rem;
    }

    .post-title {
      padding-right: 0;
    }

    .card-content {
      margin-left: 0;
    }

    .pinned-post-card::before {
      display: none;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>

<script define:vars={{ collapsible }}>
  if (!collapsible) return;

  const toggle = document.querySelector('.collapse-toggle') as HTMLButtonElement;
  const list = document.querySelector('.pinned-posts-list') as HTMLElement;

  toggle?.addEventListener('click', () => {
    const isCollapsed = list?.classList.toggle('collapsed');
    toggle?.classList.toggle('collapsed', isCollapsed);
    toggle?.setAttribute('aria-expanded', String(!isCollapsed));
  });
</script>
