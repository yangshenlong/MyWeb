{
  "name": "receptive-accretion",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build && node scripts/postbuild.mjs",
    "build:fast": "astro build",
    "analyze": "set ANALYZE=true&& astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write \"src/**/*.{astro,js,ts,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{astro,js,ts,json,css}\"",
    "lint": "eslint \"src/**/*.{astro,js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{astro,js,ts}\" --fix",
    "lint:css": "stylelint \"src/**/*.{css,astro}\"",
    "lint:css:fix": "stylelint \"src/**/*.{css,astro}\" --fix",
    "type-check": "astro check",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "index": "node scripts/postbuild.mjs"
  },
  "lint-staged": {
    "*.{astro,js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,astro}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.1",
    "astro": "^5.16.7",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^4.0.17",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "happy-dom": "^20.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pagefind": "^1.4.0",
    "prettier": "^3.0.0",
    "prettier-plugin-astro": "^0.12.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
